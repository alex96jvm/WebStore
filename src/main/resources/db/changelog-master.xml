<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="postgres">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="postgres">
        <createTable tableName="orders">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="postgres">
        <createTable tableName="sales">
            <column name="order_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_quantity" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="order_id, product_id" tableName="sales" constraintName="pk_sales"/>

        <addForeignKeyConstraint baseTableName="sales" baseColumnNames="order_id"
                                 referencedTableName="orders" referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 constraintName="fk_sales_orders"/>

        <addForeignKeyConstraint baseTableName="sales" baseColumnNames="product_id"
                                 referencedTableName="products" referencedColumnNames="id"
                                 constraintName="fk_sales_products"/>
    </changeSet>
</databaseChangeLog>
